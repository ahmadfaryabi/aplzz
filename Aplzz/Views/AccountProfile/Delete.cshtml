@model Aplzz.Models.AccountProfile

@{
    ViewData["Title"] = "Delete Profile";
}

<h2>Delete Profile</h2>

<div>
    <h3>Are you sure you want to delete this profile?</h3>
    <div>
        <strong>Username:</strong> @Model.Username
    </div>
    <div>
        <strong>Bio:</strong> @Model.Bio
    </div>
    <img src="@Model.ProfilePicture" alt="Profile Picture" width="150" />
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="AccountId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>