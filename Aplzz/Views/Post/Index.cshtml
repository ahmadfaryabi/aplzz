@model Aplzz.ViewModels.PostViewModel

<!DOCTYPE html>
<html lang="no">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Aplzz - Sosial Media</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <div class="container mt-4">
        <div class="mb-4 text-center">
            <a asp-controller="Post" asp-action="Create" class="btn btn-primary">Opprett nytt innlegg</a>
        </div>
        <h1 class="mb-4 text-center">@Model.CurrentViewName</h1>

        @if (Model.Posts != null && Model.Posts.Any())
        {
            <div class="d-flex flex-column align-items-center">
                @foreach (var post in Model.Posts)
                {
                    <div class="col-md-6 mb-4">
                        <div class="card">
                            @if (!string.IsNullOrEmpty(post.ImageUrl))
                            {
                                <img src="@post.ImageUrl" class="card-img-top" alt="Post bilde">
                            }
                            <div class="card-body">
                                <h5 class="card-title">@post.Content</h5>
                                <p class="text-muted">Postet: @post.CreatedAt.ToString("dd.MM.yyyy HH:mm")</p>

                                <!-- Like Button with AJAX -->
                                @{
                                    var isLiked = post.Likes != null && post.Likes.Any(l => l.UserId == 1);
                                }
                                <button 
                                    class="btn btn-primary btn-sm like-button" 
                                    data-post-id="@post.PostId" 
                                    data-liked="@isLiked">
                                    @if (isLiked)
                                    {
                                        <span>Fjern Like</span>
                                    }
                                    else
                                    {
                                        <span>Lik</span>
                                    }
                                    (<span class="like-count">@post.Likes?.Count ?? 0</span>)
                                </button>

                                <button class="btn btn-secondary btn-sm" data-bs-toggle="collapse" data-bs-target="#commentForm-@post.PostId">Kommenter</button>

                                <div class="collapse" id="commentForm-@post.PostId">
                                    <form asp-action="AddComment" method="post">
                                        <input type="hidden" name="postId" value="@post.PostId" />
                                        <div class="mb-2">
                                            <input type="text" name="commentText" class="form-control" placeholder="Skriv en kommentar..." required />
                                        </div>
                                        <button type="submit" class="btn btn-success">Legg til kommentar</button>
                                    </form>
                                </div>

                                <div class="mt-3">
                                    <h6>Kommentarer:</h6>
                                    @if (post.Comments != null)
                                    {
                                        @foreach (var comment in post.Comments)
                                        {
                                            <div class="border-top pt-2">
                                                <p>@comment.Text</p>
                                                <small class="text-muted">@comment.CommentedAt.ToString("dd.MM.yyyy HH:mm")</small>
                                            </div>
                                        }
                                    }
                                </div>
                            </div>
                            <div class="d-flex justify-content-end">
                                <a asp-action="Update" asp-route-id="@post.PostId" class="btn btn-info btn-sm">Rediger</a>
                                <a asp-action="Delete" asp-route-id="@post.PostId" class="btn btn-danger btn-sm ms-1">Slett</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="text-center">Ingen innlegg å vise.</p>
        }
    </div>

    <script>
        $(document).ready(function() {
            // Like button click event
            $(".like-button").click(function(e) {
                e.preventDefault();

                var button = $(this);
                var postId = button.data("post-id");
                var isLiked = button.attr("data-liked") === "true";

                // Send AJAX POST request
                $.ajax({
                    url: "/Post/LikePost",
                    method: "POST",
                    headers: {
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    },
                    data: { postId: postId },
                    success: function(response) {
                        // Update like count and button state
                        button.find(".like-count").text(response.likesCount);
                        button.attr("data-liked", !isLiked); // Toggle like state

                        // Update button text based on like state
                        if (!isLiked) {
                            button.html(`Fjern Like (<span class="like-count">${response.likesCount}</span>)`);
                        } else {
                            button.html(`Lik (<span class="like-count">${response.likesCount}</span>)`);
                        }
                    }
                });
            });
        });
    </script>
</body>
</html>
