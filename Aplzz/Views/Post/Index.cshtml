@model Aplzz.ViewModels.PostViewModel

<!DOCTYPE html>
<html lang="no">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Aplzz - Sosial Media</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <div class="mb-4 text-center">
            <a asp-controller="Post" asp-action="Create" class="btn btn-primary">Opprett nytt innlegg</a>
        </div>
        <h1 class="mb-4 text-center">@Model.CurrentViewName</h1>
        
        @if (Model.Posts != null && Model.Posts.Any())
        {
            <div class="d-flex flex-column align-items-center">
                @foreach (var post in Model.Posts)
                {
                    <div class="col-md-6 mb-4">
                        <div class="card">
                            @if (!string.IsNullOrEmpty(post.ImageUrl))
                            {
                                <img src="@post.ImageUrl" class="card-img-top" alt="Post bilde">
                            }
                            <div class="card-body">
                                <h5 class="card-title">@post.Content</h5>
                                <p class="text-muted">Postet: @post.CreatedAt.ToString("dd.MM.yyyy HH:mm")</p>
                                <button class="btn btn-primary btn-sm like-button" data-post-id="@post.Id" data-liked="false">Lik (<span class="like-count">@post.Likes</span>)</button>
                                <button class="btn btn-secondary btn-sm" data-bs-toggle="collapse" data-bs-target="#commentForm-@post.Id">Kommenter</button>

                                <div class="collapse" id="commentForm-@post.Id">
                                    <form asp-action="AddComment" method="post">
                                        <input type="hidden" name="postId" value="@post.Id" />
                                        <div class="mb-2">
                                            <input type="text" name="commentText" class="form-control" placeholder="Skriv en kommentar..." required />
                                        </div>
                                        <button type="submit" class="btn btn-success">Legg til kommentar</button>
                                    </form>
                                </div>

                                <div class="mt-3">
                                    <h6>Kommentarer:</h6>
                                    @if (post.Comments != null)
                                    {
                                        @foreach (var comment in post.Comments)
                                        {
                                            <div class="border-top pt-2">
                                                <p>@comment.Text</p>
                                                <small class="text-muted">@comment.CommentedAt.ToString("dd.MM.yyyy HH:mm")</small>
                                            </div>
                                        }
                                    }
                                </div>
                            </div>
                            <div class="d-flex justify-content-end">
                                <a asp-action="Update" asp-route-id="@post.Id" class="btn btn-info btn-sm">Rediger</a>
                                <a asp-action="Delete" asp-route-id="@post.Id" class="btn btn-danger btn-sm ms-1">Slett</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="text-center">Ingen innlegg å vise.</p>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.querySelectorAll('.like-button').forEach(button => {
            button.addEventListener('click', function() {
                const postId = this.getAttribute('data-post-id');
                const liked = this.getAttribute('data-liked') === 'true';
                const likeCountElement = this.querySelector('.like-count');
                let likeCount = parseInt(likeCountElement.textContent);

                if (liked) {
                    // Hvis allerede likt, fjern liken
                    likeCount--;
                    this.setAttribute('data-liked', 'false');
                } else {
                    // Hvis ikke likt, legg til liken
                    likeCount++;
                    this.setAttribute('data-liked', 'true');
                }

                likeCountElement.textContent = likeCount;
            });
        });
    </script>
</body>
</html>
