@model Aplzz.ViewModels.PostViewModel

<!DOCTYPE html>
<html lang="no">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Aplzz - Sosial Media</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .post-card {
            margin-bottom: 20px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }
        .post-image {
            width: 100%;
            height: 200px;
            object-fit: contain;
        }
        .comment {
            border-top: 1px solid #eee;
            padding-top: 10px;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <h1 class="mb-4">@Model.CurrentViewName</h1>
        
        @if (Model.Posts != null && Model.Posts.Any())
        {
            foreach (var post in Model.Posts)
            {
                <div class="card post-card">
                    @if (!string.IsNullOrEmpty(post.ImageUrl))
                    {
                        <img src="@post.ImageUrl" class="card-img-top post-image" alt="Post bilde">
                    }
                    <div class="card-body">
                        <p class="card-text">@post.Content</p>
                        <p class="text-muted">Postet: @post.CreatedAt.ToString("dd.MM.yyyy HH:mm")</p>
                        <button class="btn btn-primary btn-sm">Lik (@post.Likes)</button>
                        <button class="btn btn-secondary btn-sm">Kommenter</button>
                        
                        @if (post.Comments != null && post.Comments.Any())
                        {
                            <div class="mt-3">
                                <h6>Kommentarer:</h6>
                                @foreach (var comment in post.Comments)
                                {
                                    <div class="comment">
                                        <p>@comment.Text</p>
                                        <small class="text-muted">@comment.CommentedAt.ToString("dd.MM.yyyy HH:mm")</small>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>
            }
        }
        else
        {
            <p>Ingen innlegg å vise.</p>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
